extends ../layout

block content
  #page-register
    .page_content
      .row
        .col-md-3.col-md-offset-5
          h1 Sign up, Dude!
          hr
          form(action='/auth/register', method='POST', autocomplete='off')
            label(for='username') Username
            input.form-control(type='text', name='name', value=login.name, placeholder='Username', autofocus='')
            br
            label(for='password') Password
            input.form-control(type='password', name='password', value=login.password, placeholder='Password')
            br
            label(for='repassword') Repeat Password
            input.form-control(type='password', name='repassword', value=login.repassword, placeholder='Repeat password')
            br
            label(for='email') Email
            input.form-control(type='email', name='email', value=login.email, placeholder='name@domain.com')
            br
            button.btn.btn-success(type='submit') Register
            &nbsp;&nbsp;&nbsp;
            a.btn.btn-warning(href='/auth/login') Login
          br
          for error in errors
            span.text-danger #{error}
            br
