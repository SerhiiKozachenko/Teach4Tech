extends ../layout

block styles
  -if (process.env.NODE_ENV == 'production')
    link(type="text/css", rel="stylesheet", href="/dist/Teach4Tech-admin.0.0.1.min.css")
  -else 
    <!-- build:css /tmp/combined-admin.css -->
    link(type="text/css", rel="stylesheet", href="/styles/admin.css")
    <!-- endbuild -->

block scripts
  -if (process.env.NODE_ENV == 'production')
    script(src="/dist/Teach4Tech-admin.0.0.1.min.js")
  -else 
    <!-- build:js /tmp/combined-admin.js -->
    script(src='/js/admin/controllers/_mainCtrl.js')
    script(src='/js/admin/controllers/videoListCtrl.js')
    script(src='/js/admin/viewmodels/_mainVm.js')
    script(src='/js/admin/viewmodels/videoListVm.js')
    script(src='/js/admin/app.js')
    <!-- endbuild -->
  


block content
  div(ng-app="Teach4Tech.Admin")
    h1 Админка
    ul.nav.nav-pills
      li(ui-sref-active="active")
        a(ui-sref='statistics') Статистика
      li(ui-sref-active="active")
        a(ui-sref='videos') Видеозаписи
      li(ui-sref-active="active")
        a(ui-sref='articles') Статьи
      li(ui-sref-active="active")
        a(ui-sref='courses') Курсы
      li(ui-sref-active="active")
        a(ui-sref='messages') Сообщения

    div(ui-view="")
